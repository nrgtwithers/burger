{{!-- //Render data --}}

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-3">

    <h3>BURGERS TO BE CONSUMED:</h3>

      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}

  </div>

  <div class="col-md-3">

    <h3>BURGERS DEVOURED:</h3>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-3"></div>

</div>
<h3>ADD A BURGER.</h3>
<form class="create-form">

  <div class="form-group">
    <label for="burger">MAKE IT YUMMY!</label><br>
    <textarea id="burger" name="name" rows="2" cols="40"></textarea>
  </div>

  <button type="submit">SUBMIT</button>
</form>
