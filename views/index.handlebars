<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-3">

    <h4>Burgers to be eaten</h4>

      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
      {{/unless}}
      {{/each}}

  </div>

  <div class="col-md-3">

    <h4>Burgers eaten</h4>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block sleep=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-3"></div>

</div>
<h3>Add a Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Make it yummy..</label><br>
    <textarea id="burger" name="name" rows="2" cols="40"></textarea>
  </div>

  <button type="submit">Add a burger.</button>
</form>

